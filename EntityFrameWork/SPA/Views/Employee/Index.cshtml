<div class="container">
    <h2>{{ 'COURSE.TITLE' | translate}}</h2>

    <form>
        <div class="form-group">
            <label for="Course_Name">{{ 'COURSE.COURSE_NAME' | translate}}</label>
            <input type="text" class="form-control" id="Course_Name" ng-model="T_COURSES.Course_Name" placeholder="Course Name">
        </div>
        <div class="form-group">
            <label for="Descriptions">{{ 'COURSE.DESCRIPTION' | translate}}</label>
            <input type="text" class="form-control" id="Descriptions" ng-model="T_COURSES.Descriptions" placeholder="Descriptions">
        </div>
        <button type="submit" class="btn btn-default" ng-click="ManageCoures()">Submit</button>
    </form>
    <br />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>{{ 'COURSE.COURSE' | translate}}</th>
                <th>{{ 'COURSE.COURSE' | translate}}</th>
                <th>{{ 'COURSE.DESCRIPTION' | translate}}</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in CouresList">
                <td>{{$index+1}}</td>
                <td>{{item.Course_Name}}</td>
                <td>{{item.Descriptions}}</td>
            </tr>
        </tbody>
    </table>
</div>
